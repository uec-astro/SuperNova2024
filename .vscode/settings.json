{
    "workbench.colorCustomizations": {
        "activityBar.background": "#2b375b",
    },
    "[tex]": {
        // スニペット補完中にも補完を使えるようにする
        "editor.suggest.snippetsPreventQuickSuggestions": false,
        // インデント幅を2にする
        "editor.tabSize": 2
    },

    "[latex]": {

        // スニペット補完中にも補完を使えるようにする
        "editor.suggest.snippetsPreventQuickSuggestions": false,
        // インデント幅を2にする
        "editor.tabSize": 2,

        "editor.formatOnSave": false,
    },

    "[bibtex]": {
        // インデント幅を2にする
        "editor.tabSize": 2
    },

    // ---------- LaTeX Workshop ----------

    // 使用パッケージのコマンドや環境の補完を有効にする
    "latex-workshop.intellisense.package.enabled": true,


    // 生成ファイルを削除するときに対象とするファイル
    "latex-workshop.latex.clean.fileTypes": [
        "*.aux",
        "*.bbl",
        "*.blg",
        "*.idx",
        "*.ind",
        "*.lof",
        "*.lot",
        "*.out",
        "*.toc",
        "*.acn",
        "*.acr",
        "*.alg",
        "*.glg",
        "*.glo",
        "*.gls",
        "*.ist",
        "*.fls",
        "*.fdb_latexmk",
        //"*.synctex.gz",
        "_minted*",
        "*.nav",
        "*.snm",
        "*.vrb",
        "*.run.xml",
        "*.dvi",
        "*.fdb_latexmk",
        "*.fls",
        "*.toc",
        "*.bcf",
        //"*.log",
        //"*/*.log"
    ],
    // 生成ファイルを "out" ディレクトリに吐き出す
    "latex-workshop.latex.outDir": "out",
    // ビルドのレシピに使われるパーツ
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-lualatex",
                "-halt-on-error",
                "-synctex=1",
                "-outdir=%OUTDIR%",
                "-cd", /*カレントディレクトリからコンパイルするオプション（？） */
                "-shell-escape", /*shell escape*/
                "-f",
                "%DOCFILE_EXT%"
            ]
        },
        {
            "name": "diff",
            "command": "sh",
            "args": [
                "/workdir/bin/diff.sh"
            ]
        },
        {
            "name": "svg2png",
            "command": "sh",
            "args": [
                "/workdir/bin/svg2png.sh"
            ]
        }
    ],
    // ビルドのレシピ
    "latex-workshop.latex.recipes": [
        {
            "name": "compile",
            "tools": [
                "latexmk",
            ]
        },
        {
            "name": "create_diff",
            "tools": [
                "diff",
            ]
        },
        {
            "name": "convert svg to png",
            "tools": [
                "svg2png",
            ]
        }
    ],
    // ファイル保存時に自動的にビルドをOFF ONにするなら"onSave"
    "latex-workshop.latex.autoBuild.run": "never",
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.latex.autoClean.run": "onBuilt",
    "latex-workshop.message.error.show": true,
    "latex-workshop.latex.build.forceRecipeUsage": false,
    "latex-workshop.message.latexlog.exclude": [
        "Non standard sectioning command `(\\section|\\subsection)'",
        "(Unused global option(s): [jlreq_warnings].)"
    ],
    // // LaTeXのフォーマッター(linter)の設定
    // "latex-workshop.latexindent.path": "sh",
    // "latex-workshop.latexindent.args": [
    //     "/workdir/bin/linter.sh",
    // ],
    "textlint.autoFixOnSave": true,
    "editor.wordSeparators": "./\\()\"'-:,.;<>~!@#$%^&*|+=[]{}`~?．。，、（）「」［］｛｝《》てにをはがのともへでや",
    "editor.formatOnSave": false,
    "editor.wordWrap": "on",
    "cloudlatex.enabled": true,
    "cloudlatex.projectId": 932198,
}